<UserControl x:Class="Match3.GameOver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Match3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="{Binding Points}" ContentStringFormat="Pointts: {0}"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontSize="32"></Label>
        <Label Content="Game Over" HorizontalAlignment="Center" VerticalAlignment="Bottom"
               FontSize="32" Grid.Row="0"></Label>
        <Button Name="OkButton" Content="Ok" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center"
                FontSize="32" Click="OkButton_Click"></Button>
    </Grid>
</UserControl>
